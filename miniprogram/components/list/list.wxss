/* miniprogram/components/list/list.wxss */

.fl{
	float: left;
}
.clear{
	overflow:hidden;
	_zoom:1;
} 
.color_ff1b37{
	color: #ff1b37;
}

.item{
	padding: 30rpx 0;
	border-bottom: 0.5rpx solid #e6e6e6;
	margin: 0 30rpx;
}
.item:last-child{
	border-bottom: 0;
}
.item_l{
	float: left;
	display: flex;
	align-items: center;
}
.item_l image{
	width: 150rpx;
	height: 200rpx;
	background: #f6f6f6;
}

.item_r{
	float: left; 
	width: calc(100% - 150rpx);
	max-width: calc(100% - 150rpx);
	padding-left: 30rpx;
	height: 200rpx;
	display: flex;
	justify-content: space-between;
	flex-direction: column;
	position: relative;
}

.top{

}

.name{

}

.goods_title{
	height: 100rpx;
	line-height: 100rpx;
	padding-left: 40rpx;
	font-size: 32rpx;
	border-bottom:1rpx solid #e6e6e6;
}


.plus{
	height: 56rpx;
	width: 56rpx;
}
.price{
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.price > view {
	font-size: 36rpx;
}
.buy_shell{
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.buy{
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.buy .num{
	margin: 0 10rpx;
	width: 40rpx;
	text-align: center;
}
.vip{
	/* width: 108rpx; */
	height: 31rpx;
	background-color: #ff9c09;
	border-radius: 6rpx;
	color: white;
	font-size: 24rpx;
	text-align: center;
	line-height: 31rpx;
	float: left;
	margin-top: 10rpx;
	margin-right: 10rpx;
	padding: 0 10rpx;
}
.original-price{
	color: grey;
	text-decoration: line-through;
	font-size: 30rpx !important;
	margin-left: 5rpx;
}
.go{
	color: white;
	background: linear-gradient(90deg,#ff5230 0,#ff1544) ;
	position: absolute;
	bottom: -5rpx;
	right: 5rpx;
	border-radius: 10rpx;
	padding: 0 20rpx;
}